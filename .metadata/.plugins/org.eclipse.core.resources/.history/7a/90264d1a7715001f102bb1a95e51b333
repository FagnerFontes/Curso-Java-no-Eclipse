package condicionais;

import java.util.Scanner;

//Faça um Programa que verifique se uma letra digitada é "F" ou "M". Conforme a letra escrever: F - Feminivo, M - Masculino, Sexo inválido

public class Exer3 {

	public static void main(String[] args) {
		
	 System.out.print("Digite M para Masculino ou F para Masculino: ");
	 
	 Scanner porta = new Scanner(System.in);
	 String sexo = porta.next();
	
	 if(sexo == "m") {
		System.out.println("Sexo Masculino");
	 }	else if(sexo == "f") {
		 System.out.print("Sexo Feminino");
	 }else {
		 System.out.print("Sexo inválido");
	 }
	}
}
